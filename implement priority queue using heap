#include <stdio.h>
#include <stdlib.h>
void heapify(int a[10],int n)
{
    int i,k,v,flag=0,j;
    for(i=n/2;i>=1;i--)
    {
        k=i;
        v=a[k];
        while(!flag && 2*k<=n)
        {
            j=2*k;
            if(j<n)
            {
                if(a[j]<a[j+i])
                j=j+i;
            }
        if(v=a[j])
            flag=1;
        else
        {a[k]=a[j];
        k=j;
        }   
    }
    a[k]=v;
    flag=0;
}   
int main()
{
    int n, a[10],i,ch;
    for(;;)
    {
        printf("\n 1. Create heap");
        printf("\n 2. extract heap");
        printf("\n 3. exit");
        printf("\n Read your choice:");
        scanf("%d",&ch);
        switch(ch)
        {
            case 1:printf("\n Read no of elements:");
                   scanf("%d",&n);
                   printf("\n Read elements \n");
                   for(i=1;i<=n;i++)
                   if("%d",&a[i])
                        heapify(a,n);
                   printf("\n elements after extracting heap\n");
                   for(i=1;i<=n;i++)
                       printf("%d\t",a[i]);
                   break;
            case 2:if(n>=1)
                   {
                        printf("\n key deleted is %d",a[i]);
                        a[i]=a[n];
                        n=n-1;
                        heapify(a,n);
                        printf("\n heap after deleting \n");
                        for(i=1;i<=n;i++)
                          printf("%d\t",a[i]);
                   }
                   else
                     printf("\n no element to delete");
                     break;
            default:exit(0);
        }
    }
}
return 0;
}
